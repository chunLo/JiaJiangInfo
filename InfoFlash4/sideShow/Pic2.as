package  {		import flash.display.MovieClip;	import flash.display.Loader;	import flash.net.URLRequest;	import flash.events.MouseEvent;		public class Pic2 extends MovieClip	{		private var PicList:Array;		private var transit:MovieClip;		public var info_text:String;		public var info_title:String;				public function Pic2(faceinfo:XML) 		{						this.PicList = new Array();					var imglist:XMLList = faceinfo.imageS;						for (var i=0; i<imglist.length(); i++)			{				//var mc = new Loader(imglist[i]);				//renew a makeup								var mc = new Loader();								mc.load(new URLRequest(imglist[i].imgURL));				mc.x = imglist[i].imageX;				mc.y = imglist[i].imageY;				mc.scaleX = mc.scaleY = imglist[i].scaled;				addChild(mc);								trace('added MC ' + imglist[i].imgURL);// 底下的makeup 所以放在前面								if (imglist[i].clickable != 0)				{					var m = new Pic1(imglist[i]);					addChild(m);				}			}				    this.info_text = faceinfo.infoS;			this.info_title = faceinfo.general;					}	}	}