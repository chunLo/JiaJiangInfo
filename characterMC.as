package  {		import flash.display.MovieClip;	import flash.events.Event;	import flash.display.Loader;	import flash.net.URLRequest;		public class characterMC extends MovieClip	{		private var targetAlpha:Number;		private var mcBot:Loader;		private var mcTop:Loader;		public function characterMC(topName:String, botName:String) 		{			// load in the two images specified, and create MovieClips for them			mcBot = new Loader();			mcBot.load(new URLRequest(botName));			addChild(mcBot);						mcTop = new Loader();			mcTop.load(new URLRequest(topName));			addChild(mcTop);									mcTop.alpha = 1;			targetAlpha = 1;		}				public function showBone(rightnow:Boolean = false):void		{			trace('fading out!');			animateTo(0, rightnow);		}				public function showBody(rightnow:Boolean = false):void		{			animateTo(1, rightnow);		}				private function animateTo(target:Number, rightnow:Boolean = false):void		{			if (rightnow)			{				mcTop.alpha = target;				return;			}						targetAlpha = target;			if (Math.abs(mcTop.alpha - targetAlpha) > 0.05)			{				addEventListener(Event.ENTER_FRAME,animate);			}		}				private function animate(e:Event ):void		{			// animate towards target value			mcTop.alpha += (targetAlpha - mcTop.alpha) * 0.2;						// if we're there, remove the event listener		 	if (Math.abs(mcTop.alpha - targetAlpha) < 0.01)			{				mcTop.alpha = targetAlpha;				removeEventListener(Event.ENTER_FRAME,animate);			}					}	}	}