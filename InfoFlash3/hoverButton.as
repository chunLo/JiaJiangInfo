package  {		import flash.events.MouseEvent;	import flash.display.MovieClip;	import flash.display.Sprite;		public class hoverButton extends MovieClip 	{		private var labelText:String;		public function hoverButton(inputLabel:String) 		{						labelText = inputLabel;						this.mcButton.btnText.text = labelText;						this.mcButton.visible = false;						var hit:Sprite = new Sprite();			hit.graphics.beginFill(0x00FF00);			hit.graphics.drawRect(0,-3,30,30);			this.hitArea = hit;			hit.visible = false;			addChild(hit);						this.addEventListener(MouseEvent.MOUSE_OVER, showButton);			this.addEventListener(MouseEvent.MOUSE_OUT, hideButton);					}				private function showButton(e:MouseEvent = null):void		{			this.mcButton.visible = true;		}				private function hideButton(e:MouseEvent = null):void		{			this.mcButton.visible = false;		}	}	}