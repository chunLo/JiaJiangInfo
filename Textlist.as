package  {	import flash.display.MovieClip;	import flash.events.Event;	import flash.net.URLLoader;	import flash.net.URLRequest;	import flash.display.Loader;	import TextE;	import flash.text.TextField;	import flash.text.TextFormat;    import flash.text.StyleSheet;    import flash.text.Font;		public class Textlist extends MovieClip	{		private var xmlRequest:URLRequest;         private var xmlLoader:URLLoader; 				public var texts:Array;		public var myFont:Font;				private var infoField:TextField;				public function Textlist(xmlFile:String) 		{			this.texts = new Array();						this.xmlRequest = new URLRequest(xmlFile);			this.xmlLoader = new URLLoader(xmlRequest);			xmlLoader.addEventListener(Event.COMPLETE, xmlLoaderHandler);						myFont = new Font1();						this.infoField = new TextField();			addChild(this.infoField);			infoField.x=600;			infoField.y=350;			infoField.embedFonts = true;			this.infoField.width=450;			this.infoField.height=600;			//this.infoField.border=true;			this.infoField.wordWrap = true;//換行											}				 private function xmlLoaderHandler(event:Event):void		{			var textData:XML = new XML(event.target.data);				var textlist:XMLList = textData.wholeText;				for (var i=0; i<textlist.length(); i++)			{				var t = new TextE(textlist[i]);				this.texts.push(t);				addChild(t);			}						infoField.text = texts[0].info_textDay;						var textFormat = new TextFormat();			textFormat.color =0x000000;			textFormat.size=16;			textFormat.leading=10;//下一行行寬			textFormat.letterSpacing=2;			textFormat.leftMargin=0;//整段對左邊的空白數			textFormat.indent = 0;//2第一排得段落			textFormat.font = myFont.fontName;			infoField.setTextFormat(textFormat);		}				public function changeTextColor(color):void {			infoField.textColor = color; //change textcolor at night		}	}	}